<!DOCTYPE html>
<html>
	<body>

  <script>
    
    let name = prompt('Как тебя зовут?')
    alert( `Салам, ${name}!` );

    let age = prompt('Сколько тебе лет?');
    if ( age > 20 ) {
    	alert (`Фу, какой старый, ${age} лет!`);
    }
    else {
    	alert (`Фу, ${age} лет!`);
    }
    
  </script>

</body>
</html>
